<%- include('./_header'); %>
<div class="container mt-2">
    <div class="row">
        <div class="col-lg">
            <section>
                <div class="container-fluid bg-light border border-primary rounded align-items-center">
                    <% if (messages.error) { %>
                        <%= messages.error %>
                    <% } %>
                    <h2>Login</h2>
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label for="callsign">Callsign</label>
                            <input type="text" id="callsign" name="callsign" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                    <br />
                </div>
            </section>
        </div> <!-- col-lg -->
  </div> <!-- row -->
  <div class="row" style="align-items:safe flex-end;">
    <div class="col-lg">
        <%- include('./_footer'); %>
    </div>
  </div>
</div>
<%- include('./_end_page'); %>